rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /assets/{assetId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
